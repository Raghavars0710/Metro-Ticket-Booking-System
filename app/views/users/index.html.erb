<h1>All users</h1>
 
<table border="2", color ="white">
  <thead>
    <tr>
      <th>Name</th>
      <th>Contact Number</th>
      <th>Address</th>
      <th>User Role</th>
      <th>Role Details</th>
      <th colspan="3">Operations</th>
      <!-- <th ></th> -->
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.contact_number %></td>
        <td><%= user.address %></td>
        <td><%= user.type %></td>
        <td><%= user.role_description %></td>
        <td><%= link_to 'Show', user_path %></td>
        <td><%= link_to 'Edit', edit_user_path(user) %></td>
        <td><%= button_to("Destroy", user, method: :delete) %></td>
        <!-- <td><%#= button_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td> -->
      </tr>
    <% end %>
  </tbody>
</table>

