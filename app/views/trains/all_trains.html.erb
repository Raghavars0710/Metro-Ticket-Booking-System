<style>
  h1 {
    text-align: center;
    margin-bottom: 20px;
  }

  table {
    width: 100%;
    border-collapse: collapse;
  }

  th, td {
    padding: 10px;
    text-align: left;
    border-bottom: 1px solid #ddd;
  }

  th {
    background-color: #f2f2f2;
  }

  .btn-group {
    display: flex;
    justify-content: space-between;
  }

  .btn {
    padding: 6px 12px;
    border-radius: 4px;
    font-size: 12px;
    cursor: pointer;
  }

  .btn-primary {
    background-color: #007bff;
    color: #fff;
  }

  .btn-danger {
    background-color: #dc3545;
    color: #fff;
  }
</style>

<h1>All Trains</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Train Name</th>
      <th>Train Number</th>
      <th>Source</th>
      <th>Destination</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @trains&.each do |train| %>
    <tr>
      <td><%= train.name %></td>
      <td><%= train.train_number %></td>
      <td><%= train.source %></td>
      <td><%= train.destination %></td>
      <% if current_user.role == "Admin" %>
      <td>
        <div class="btn-group">
          <%= link_to('Update Train', edit_train_path(train.id), class: "btn btn-primary") %>&nbsp;&nbsp;
          <%= link_to('View Tickets', train_tickets_path(train.id), class: "btn btn-primary") %>&nbsp;&nbsp;
          <%= button_to("Delete Train", train_path(train.id), method: :delete, class: "btn btn-danger") %>
        </div>
      </td>
      <% end %>
    </tr>
    <% end %>
  </tbody>
</table>
