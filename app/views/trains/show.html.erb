
<h1>All Trains</h1>

<table border="2", color ="white">
  <thead>
    <tr>
      <th>Train Name</th>
      <th>Train Number</th>
      <th>Source</th>
      <th>Destination</th>
      <th>Book Ticket</th>
    </tr>
  </thead>
  <tbody>
    <% @train.each do |train| %>
    <tr>
      <td><%= train.name %></td>
      <td><%= train.train_number %></td>
      <td><%= train.source %></td>
      <td><%= train.destination %></td>
    </tr>
    <% end %>
  </tbody>
</table>