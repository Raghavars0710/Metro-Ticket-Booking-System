<div class="card text-center">
   <div class="card-body">
      <%= form_tag metro_services_search_path, method: :get do %>
         <%= label_tag :source, "From" %>
         <%= text_field_tag :source, params[:source] %>
         <%= label_tag :destination, "To" %>
         <%= text_field_tag :destination, params[:destination] %>
       
         <%= submit_tag "Search", class: "btn btn-danger btn-block" %>
      <% end %>
   </div>
   <div class="card-footer text-body-secondary">
   </div>
</div>

