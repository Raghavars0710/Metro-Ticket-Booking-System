<p><%= button_to( "Log Out", destroy_welcome_session_path, method: :delete ) %> </p>

<p id="notice"><%= notice %></p>

<p>User Name:- <%= current_welcome.username%> </p>
<p>User Id:- <%= current_welcome.id%></p>

<h1>All Members</h1>


<table border="2", color ="white">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Phone Number</th>
      <th>Address</th>
      <th>Date Of Birth</th>
      <th>Gender</th>
      <th>Role</th>
      <th colspan="3">Operations</th>
      <!-- <th ></th> -->
    </tr>
  </thead>

  <tbody>
    <% @members.each do |member| %>
    <tr>
      <td><%= member.name %></td>
      <td><%= member.email %></td>
      <td><%= member.contact_number %></td>
      <td><%= member.address %></td>
      <td><%= member.date_of_birth %></td>
      <td><%= member.gender %></td>
      <td><%= member.role %></td>
      <td><%= link_to 'Show', user_member_path(@user,member) %></td>
      <td><%= link_to 'Edit', edit_user_member_path(@user,member) %></td>
      <td><%= button_to( "Remove", user_member_path(@user,member), method: :delete) %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<br>
<p><%= link_to 'Add Member', new_user_member_path %>  &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp; <%= link_to 'User Home Page', user_path(@user) %></p>

 